{
  "compilerOptions": {
      "allowJs": true,
      "declaration": true,
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es5",
      "noImplicitAny": false,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "lib": [
          "es2020"
      ]
    },
    "include": ["src/**/*"],
    "exclude": [ "src/templates"]
}
